@model PinewoodGrow.Models.Situation

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Income Source</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
