@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


    <script src="~/js/refreshDDL.js"></script>
    <script type="text/javascript">
        $('#ProductID').change(function () {
            var selectedProvince = $("#ProductID").val();
            var URL = "/Reciepts/GetUnitPrice/" + selectedProvince;
            refreshDDL('ProductUnitPriceID', URL, true);


        });

        $(document).ready(function () {
            $("input[type=text]").change(function () {
                CalculateSubTotal();
            });
            $("input[type=text]").change(function () {
                CalculateGrandTotal();
            });

            @*$('#SubTotal').keyup(function (ev) {
                var total = $('#SubTotal').val() * 1;
                var tot_price = total + (total * 0.13);
                var divobj = document.getElementById('Total');
                divobj.value = tot_price;
            });*@

        });

        function CalculateSubTotal() {
            var UnitPrice = $("#ProductUnitPriceID").val();
            var Quantity = $("#Quantity").val();

            var Total = parseFloat(UnitPrice) * parseFloat(Quantity);
            $("#SubTotal").val(parseFloat(Total).toFixed(2));
        }
        function CalculateGrandTotal() {
            var SubTotal = $("#SubTotal").val() * 1;

            var Total = SubTotal + (SubTotal * 0.13);
            $("#Total").val(parseFloat(Total).toFixed(2));
        }
    </script>
